.contacts
	max-width 615px
	width 100%
	margin 0 auto
	padding-top 50px
	&-text
		color $dark-text-color
		transition color .17s ease-in-out
		font-size 17px
		margin-bottom 32px
		h1,h2
			line-height normal
			margin-bottom 18px
			font 26px $ExBold

.captcha
	img
		display block

+max-screen(620px)
	.contacts
		padding-top 14px
	
	.captcha
		width 100%
		flex none

	.form-group.row
		flex-wrap wrap
		gap 0

		.btn
			width 100%
			max-width 100%
			flex none
			margin-top 20px