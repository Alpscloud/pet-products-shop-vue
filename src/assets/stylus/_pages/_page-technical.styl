.empty-block
	color $dark-text-color
	transition color .17s ease-in-out
	margin 20px 0
	&-img
		width 220px
		height 115px
		&__fill
			fill $light-gray
		&__stroke
			fill none
			stroke #949494 
			stroke-opacity .25
		&__figure
			fill-rule evenodd
			clip-rule evenodd
			fill $dark-text-color

		svg
			display block
		img
			display block
			margin 0 auto
			max-width 100%
			max-height 100%
			width auto
			height auto
			position relative
			z-index 2

		
	h1,h2
		font 22px $ExBold
		margin-bottom 18px
		line-height 1

	b,strong
		font-family $Bold

	p
		font-size 16px
		opacity .7
		

	.btn
		margin-top 24px
		min-width 240px

.empty-block-img__404
	height auto
	width auto
	margin 100px auto 24px auto



+max-screen(620px)
	.empty-block
		p
			font-size 14px
		h1,h2
			font-size 20px
			margin-bottom 18px

		&-img
			width 100%

// ================ 404

.page-text-content
	padding-top 8px
	.content
		font-size 17px
		line-height 1.5
		*
			margin-bottom 18px
			&:last-child
				margin-bottom 0

		h2
			font-size 28px
			font-family $Bold

		h3
			font-size 22px

	.scroll-up
		width 100%
		margin-top 30px
		
	
.page-content-heading
	margin-bottom 30px
	font-size 18px
	color rgba(#454B5E, .7)
	h1,h2
		color $dark-text-color
		font 36px $ExBold
		margin-bottom 10px

+max-screen(992px)
	.page-content-heading
		font-size 15px
		h1,h2
			font-size 30px

	.page-text-content
		.content
			font-size 15px


	
+max-screen(767px)
	.page-text-content
		.scroll-up
			flex-direction row
			justify-content flex-start
			padding-left 16px
			&-text
				display block

+max-screen(620px)

	.page-text-content
		.content
			h2
				font-size 20px
			h3
				font-size 18px




