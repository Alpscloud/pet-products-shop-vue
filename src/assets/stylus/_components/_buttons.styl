.btn
	display inline-flex
	align-items center
	justify-content center
	flex-wrap nowrap
	padding 12px 16px
	height 50px
	min-width 180px
	font 15px $Bold
	line-height 1
	text-align center
	color white
	background-color $accent-color
	border-radius 7px
	transition all .17s ease-in-out
	backface-visibility hidden
	text-transform capitalize
	&:disabled,
	&.is-disabled
		pointer-events none
		background-color rgba(71, 71, 71, 0.50)
		cursor not-allowed
	&:hover
		background-color $dark-accent-color

	&-default
		height 48px
		border-radius 12px
		display inline-flex
		align-items center
		justify-content center
		flex-wrap nowrap
		color $dark-text-color
		&:hover
			background-color $light-gray
		svg
			fill currentColor

	&-app
		padding 12px 16px
		gap 8px
		font 15px $Bold
		svg
			display block
			width 28px
			aspect-ratio 1/1
			fill currentColor
			transition fill .17s ease-in-out


	&-play
		flex-col-center()
		width 108px
		height 108px
		border 3px solid #fff
		position absolute
		z-index 2
		position-center()
		border-radius 50%
		bg(50%, 50%)
		overflow hidden
		&:before
			pseudo()
			position absolute
			position-center()
			width 100%
			height 100%
			background-color rgba($basic-black-color, .3)
			z-index 1
		svg
			flex none
			width 32px
			height 32px
			position relative
			z-index 2
			fill white

	

	&-control
		height 40px
		backface-visibility hidden
		position relative
		border-radius 7px
		background-color $light-gray
		display inline-flex
		flex-wrap nowrap
		align-items center
		gap 8px
		font 14px $Bold
		padding 8px 12px
		&-text
			position relative

		&.is-active
			.btn-control-text
				&:before
					content attr(data-text)
					margin-right 4px
		&-ic
			flex none
			position relative
			width 24px
			height 24px
			display inline-block
		svg
			transition transform .17s ease-in-out
			width 100%
			aspect-ratio 1/1
			fill currentColor
			fill-rule evenodd
			clip-rule evenodd
			flex none
			position absolute
			position-center()
		&:hover
			background-color $accent-color
			color #fff

		&-fullscreen
			svg
				width 24px
				height 24px
			&__off
				position absolute
				position-center()
				display none
	
		
		&-favorite
			svg
				fill none !important
				fill-rule evenodd
				clip-rule evenodd
				stroke-width 2px
				stroke $dark-text-color
			&:hover
				svg
					fill none
					stroke currentColor
			
			&.is-active
				background-color $light-gray
				svg
					stroke $accent-color !important
					fill $accent-color !important
				.btn-control-text
					&:before
						content attr(data-text)
						margin-right 4px
				&:hover
					background-color $accent-color
					svg
						stroke #fff !important
						fill none !important

				



	

	&-theme-toggler
		flex-col-center()
		width 48px
		aspect-ration 1/1
		position relative
		
		svg
			display block
			width 32px
			height 32px
			fill-rule evenodd 
			clip-rule evenodd
			fill $dark-text-color
		
		&__sun
			opacity 0
			position absolute
			position-center()
			fill white !important
		
		&.is-active
			.btn-theme-toggler
				&__sun
					opacity 1
				&__moon
					opacity 0
	
	&-favorite
		flex-col-center()
		width 32px
		height 32px
		border-radius 50%
		background-color white
		box-shadow 0px 4px 7px rgba(0, 0, 0, 0.22)
		svg
			display block
			width 18px
			height 18px
			fill none
			fill-rule evenodd
			clip-rule evenodd
			stroke-width 2px
			stroke $dark-text-color
			opacity .6

			
		
		&.is-active
			opacity 1 !important
			visibility visible !important
			pointer-events auto  !important
			svg
				fill-rule inherit
				fill $accent-color
				stroke $accent-color
				opacity 1
		

		
		

	&-hamburger
		flex none
		aspect-ratio 1/1
		width 48px
		background-size 0 0
		margin-right 16px
		&:before
			pseudo()
			position absolute
			position-center()
			width 32px
			aspect-ratio 1/1
			background-image inherit
			background-position 50%
			background-repeat no-repeat
			background-size 32px 32px
			display none
		svg
			width 32px
			aspect-ratio 1/1
			transition none
		&.is-active
			svg
				transform scaleX(-1)
		&--tablet
			display none
	

+max-screen(1640px)
	.btn-app
		width 48px
		padding 0
		gap 0
		&-text
			display none
		svg
			width 28px
			height 28px

+max-screen(992px)
	.btn-hamburger
		width 40px
		height 40px
		svg
			width 32px
			height 32px
		&--tablet
			display block
		&--desktop
			display none
		
			


