input[type="search"]
	appearance none
	-webkit-appearance none			

input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration
	appearance none
	-webkit-appearance none
	backface-visibility hidden
	transform translate3d(0,0,0)



.success
	position absolute
	position-center()

	z-index 5
	padding 31px 65px
	background-color #F8F6F6
	transition all .17s ease-in-out
	color $dark-text-color
	box-shadow 0px 4px 27px 0px rgba(0, 0, 0, 0.25)
	text-align center
	font-size 19px
	width 100%
	max-width 440px
	border-radius 12px
	opacity 0
	visibility hidden
	pointer-events none
	h3
		font 22px $Bold
		margin-bottom 20px
	
	
.form
	&-wrapper
		position relative
		&.is-success
			.success
				opacity 1
				visibility visible
				pointer-events auto

.form-input
	display block
	width 100%
	padding 14px 24px 4px 24px
	text-align left
	background-color $input-bg
	border 1px solid $light-border-color
	font 16px $Reg
	color black
	border-radius 7px
	height 48px	
	transition all .17s ease-in-out
	&::-webkit-input-placeholder
		font 1em $Reg
		color rgba($text-color, .1)
		transition color .17s ease-in-out
	&::-moz-placeholder
		font 1em $Reg
		color rgba($text-color, .1)
		transition color .17s ease-in-out
	&:-moz-placeholder
		font 1em $Reg
		color rgba($text-color, .1)
		transition color .17s ease-in-out
	&:-ms-input-placeholder
		font 1em $Reg
		color rgba($text-color, .1)
		transition color .17s ease-in-out

	&:focus
		background-color white
		border-color $accent-color
		box-shadow 0 0 0 1px $accent-color
		+ button
			svg
				fill $accent-color

.form-input__error
	color $error-color
	font-size 12px
	margin-top 8px
	line-height 1
	display none
			
.form-group
	position relative
	margin-bottom 18px
	&:last-child
		margin-bottom 0

	&__select
		position relative
			
.form-textarea
	min-height 178px
	height 100%
	padding-top 20px
	border-radius 12px

.form-label
	display block
	position relative
	.form-input

		&:focus
			background-color white
			border-color $secondary-color
			box-shadow inset 0 0 0 1px $secondary-color

			
	&__text
		display inline-block
		position absolute
		top 0
		left 0
		font 16px $Reg
		color $dark-text-color
		transition all .17s ease-in-out
		line-height 1
		left 24px
		pointer-events none
		top 16px
	&.is-active
		.form-input
			border-color $secondary-color
			background-color white
		.form-label__text
			top 5px
			font-size 12px
			color #878787


	&.is-error
		.form-input
			&__error
				display block
				text-align left

		.form-label__text
			top 6px
			font-size 12px
			

		.js-required-field
			border-color $error-color
			background-color white
			box-shadow 0 0 0 1px $error-color

	&.is-valid
		.form-input
			box-shadow none !important
			background-color $input-bg !important
			border-color $light-border-color !important
			padding-bottom 14px
		.form-label__text
			display none


.form-group__select
	position relative
	z-index 5
	&.is-active
		.form-select__options
			opacity 1
			visibility visible
			pointer-events auto
			margin-top 0
		
		.form-select__arrow
			transform rotate(-180deg)

	.form-label.is-valid
		.form-input
			box-shadow none !important
			background-color $input-bg !important
			border-color $light-border-color !important
		

.form-select__arrow
	position absolute
	right 20px
	top 20px
	height 8px
	width 8px
	display inline-block
	pointer-events none
	svg
		display block
		width 100%
		height 100%
		transition fill .17s ease-in-out
		fill $dark-text-color

.form-group
	.form-select__options
		padding-top 48px
		font-size 16px
		border-bottom-left-radius 7px
		border-bottom-right-radius 7px

.form-select
	&__options
		position absolute
		overflow hidden
		text-align left
		top 0
		left 0
		right 0
		z-index -1
		background-color white
		box-shadow 0px 4px 22px 0px rgba(14, 21, 80, 0.17)
		border-radius 7px
		padding-top 48px
		opacity 0
		visibility hidden
		pointer-events none
		margin-top 10px
		transition all .17s ease-in-out
		font-size 17px	
		li
			transition all .17s ease-in-out
			display block
			padding 10px 16px
			color $dark-text-color
			cursor pointer
			
			&:hover,
			&.is-active
				background-color $secondary-color
				color white


.form-input
	&.ng-invalid
		border-color #E80303 !important
		box-shadow 0 0 0 1px #E80303 !important
		~ .form-input__error
			display block !important


.form
	.btn
		min-width 240px


// Search
.search-form
	&__wrapper
		width 100%
		
	&__group
		position relative

	&__input
		padding 12px 80px 12px 46px
		height 48px
		text-align left
		width 100%
		display block
		color $dark-text-color
		font 17px $Med
		border 1px solid $border-color 
		background-color $input-bg
		border-radius 7px
		transition all .17s ease-in-out
		&::-webkit-input-placeholder
			font 1em $Reg
			color $dark-text-color
			transition color .17s ease-in-out
		&::-moz-placeholder
			font 1em $Med
			color $dark-text-color
			transition color .17s ease-in-out
		&:-moz-placeholder
			font 1em $Med
			color $dark-text-color
			transition color .17s ease-in-out
		&:-ms-input-placeholder
			font 1em $Reg
			color $dark-text-color
			transition color .17s ease-in-out
	
		&:focus,
		&.is-active
			background-color $basic-white-color
			border-color $secondary-color
			box-shadow inset 0 0 0 1px $secondary-color
			padding-left 18px
			~ .search-form__ic
				display none
			~ .search-form__btn
				opacity 1
				visibility visible
				pointer-events auto

	&__ic
		display block
		position absolute
		vertical-center()
		left 18px
		width 20px
		aspect-ratio 1/1
		flex-col-center()
		pointer-events none
		svg
			width 100%
			height 100%
			fill $dark-text-color
		
	&__btn
		position absolute
		display block
		opacity 0
		visibility hidden
		pointer-events none
		vertical-center()
		z-index 1
		width 48px
		height 100%
		right 0
		border-radius 0 7px 7px 0px
		background-color $secondary-color
		svg
			display block
			position absolute
			width 20px
			aspect-ratio 1/1
			fill $basic-white-color
			transition fill .17s ease-in-out
			position-center()
	


+max-screen(620px)
	.search-form
		&__input
			height 40px
			font-size 15px
			padding-left 38px
		&__ic
			width 18px
			height 18px
			left 12px

		&__btn
			width 40px